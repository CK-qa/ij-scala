<?xml version="1.0" encoding="iso-8859-1"?>

<idea-plugin>

    <extensions defaultExtensionNs="org.jetbrains.uast">
        <uastLanguagePlugin implementation="org.jetbrains.plugins.scala.uast.ScalaUastLanguagePlugin"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <experimentalFeature id="scala.uast.enabled" percentOfUsers="100" requireRestart="true">
            <description>Enables UAST support for Scala</description>
        </experimentalFeature>
    </extensions>
</idea-plugin>
